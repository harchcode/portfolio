---
import site from "../site-info";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{site.title}</title>
    <link rel="stylesheet" href={Astro.resolve("../style.css")} />
  </head>
  <body>
    {site.svgDefs.map(svgDef => (
      <svg style="display: none" version="2.0">
        <defs>
          <symbol id={svgDef.id} viewbox={svgDef.viewBox}>
            <path fill="#fff" d={svgDef.path}></path>
          </symbol>
        </defs>
        <use href={`#${svgDef.id}`}></use>
      </svg>
    ))}

    <div class="fixed w-full glass z-20 shadow">
      <div class="w-full max-w-screen-lg mx-auto px-4 py-2 z-20">
        <div class="flex items-center">
          <div class="flex-auto space-x-2">
            <a href="#about" class="inline-block underline menu-link">About</a>
            <a href="#work" class="inline-block underline menu-link">Works</a>
            <a href="#project" class="inline-block underline menu-link"
              >Projects</a
            >
          </div>
          <div class="flex-none"></div>
        </div>
      </div>
    </div>
    <div class="max-w-screen-lg px-4 md:px-8 mx-auto w-full h-full">
      <div
        id="about"
        class="min-h-full flex flex-col items-center justify-around md:justify-center py-16"
      >
        <div class="md:flex md:items-center md:space-x-8 w-full">
          <div class="flex-none w-full md:w-auto md:m-0">
            <img
              src={site.photoUrl}
              class="w-full md:w-80 md:h-80 lg:w-96 lg:h-96"
            />
          </div>
          <div class="flex-auto px-4 md:px-0 -mt-24 md:mt-0 w-full">
            <div class="text-2xl md:text-5xl font-bold">Hohoho,</div>
            <div class="md:mt-2 text-2xl md:text-5xl font-bold">
              I am Hartono Chandra
            </div>
            <div class="mt-2 md:mt-8 font-bold md:text-xl">
              Software Engineer - Web
            </div>
            <div class="mt-2 md:mt-8 md:text-lg">
              {site.intro}
            </div>
          </div>
        </div>
        <div class="flex space-x-4 mt-2 md:mt-16">
          {site.socialLinks.map(link => (
            <a
              href={link.url}
              aria-label={link.label}
              class="social-button w-12 h-12 p-3 md:w-16 md:h-16 md:p-4"
            >
              <svg width="100%" height="100%" version="2.0">
                <use href={`#${link.svgSymbolId}`} />
              </svg>
            </a>
          ))}
        </div>
      </div>
      <div id="work" class="min-h-full relative flex flex-col py-16">
        <div class="flex-auto"></div>
        {site.works.map((work, i) => (
          <>
            <div class="relative">
              {i !== site.works.length - 1 && (
                <div class="absolute w-12 md:w-24 h-full flex justify-center mt-8">
                  <div class="bg-black w-0.5 md:w-1 h-full"></div>
                </div>
              )}

              <div
                class={`relative flex space-x-4 md:space-x-12${
                  i === 0 ? "" : " mt-8"
                }`}
              >
                <div
                  class="w-12 h-12 md:w-24 md:h-24 rounded-full bg-white border-black border-2 md:border-4 flex-none bg-contain"
                  style={`background-image: url(${work.imageSrc})`}
                ></div>
                <div class="md:flex md:space-x-12">
                  <div class="w-full md:w-64 md:flex-none">
                    <div>
                      <span class="font-bold text-xs">{work.periode}</span>
                    </div>
                    <div class="text-2xl md:mt-1">{work.companyName}</div>
                    <div class="text-sm text-gray-800">{work.jobTitle}</div>
                    <div class="flex flex-wrap mt-1">
                      {work.tags.map(tag => (
                        <div class="text-xs mr-1 mt-1 bg-gray-200 text-gray-800 px-1 py-0.5 rounded">
                          {tag}
                        </div>
                      ))}
                    </div>
                  </div>
                  <div class="flex-auto mt-2 md:mt-0">
                    <ul class="list-check">
                      {work.checklist.map(check => (
                        <li>{check}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <div class="flex-auto relative">
              {i !== site.works.length - 1 && (
                <div class="absolute w-12 md:w-24 h-full flex justify-center mt-8">
                  <div class="bg-black w-0.5 md:w-1 h-full"></div>
                </div>
              )}
            </div>
          </>
        ))}
      </div>
      <div id="project" class="min-h-full flex items-center py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full">
          {site.projects.map(project => (
            <div
              class="bg-black shadow rounded-xl overflow-hidden bg-center bg-cover flex flex-col justify-end w-full h-48 md:h-96"
              style={`background-image: url(${project.imageSrc})`}
            >
              <div class="px-4 glass w-full h-1/2 md:h-1/3 items-center overflow-hidden flex shadow">
                <div class="flex-auto">
                  <div class="text-xl md:text-3xl">{project.name}</div>
                  <div class="mt-1 flex flex-wrap">
                    {project.tags.map(tag => (
                      <div class="text-xs mr-1 mt-1 bg-gray-200 text-gray-800 px-1 py-0.5 rounded">
                        {tag}
                      </div>
                    ))}
                  </div>
                </div>
                <div class="flex justify-end space-x-2">
                  <a
                    href={project.githubUrl}
                    aria-label="github"
                    class="project-button w-12 h-12 p-2"
                  >
                    <svg width="100%" height="100%" version="2.0">
                      <use href={`#github`} />
                    </svg>
                  </a>
                  <a
                    href={project.url}
                    aria-label="demo"
                    class="project-button w-12 h-12 p-2"
                  >
                    <svg width="100%" height="100%" version="2.0">
                      <use href={`#play`} />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
    <script type="module" src={Astro.resolve("../main.ts")}></script>
  </body>
</html>
