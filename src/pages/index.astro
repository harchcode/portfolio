---
import "../style.css";
import picUrl from "../assets/login.svg";
import { site } from "../site-info";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="My portfolio site" />
    <title>{site.title}</title>
  </head>
  <body>
    {
      site.svgDefs.map(svgDef => (
        <svg style="display: none" version="2.0">
          <defs>
            <symbol id={svgDef.id} viewBox={svgDef.viewBox}>
              <path class="fill-gray-700 dark:fill-gray-300" d={svgDef.path} />
            </symbol>
          </defs>
          <use href={`#${svgDef.id}`} />
        </svg>
      ))
    }

    <div class="flex items-center justify-center w-full min-h-full sm:p-4">
      <div
        class="w-full sm:max-w-md md:max-w-7xl relative sm:shadow sm:border sm:border-color3 sm:dark:border-black sm:rounded-xl bg-gradient-to-b from-white to-color1 dark:from-dcolor1 dark:to-black overflow-hidden"
      >
        <div
          class="mx-auto md:absolute md:top-0 md:right-0 overflow-visible w-full md:w-128 md:h-128 lg:w-160 lg:h-160"
        >
          <img
            src={picUrl}
            width="100%"
            height="100%"
            alt=""
            class="object-cover object-center"
            style="transform: scale(-1.2,1.2);"
          />
        </div>

        <div class="relative">
          <div class="p-4 md:p-8 text-center md:text-left">
            <div
              class="text-4xl md:text-5xl tracking-wider text-color4 dark:text-dcolor4"
            >
              Hartono Chandra
            </div>
            <div
              class="text-base md:text-xl tracking-widest font-bold mt-1 md:mt-4 text-color3 dark:text-dcolor3"
            >
              Software Engineer - Web
            </div>
            <div
              class="mt-4 md:mt-8 flex space-x-8 justify-center md:justify-start"
            >
              {
                site.socialLinks.map(link => (
                  <a href={link.url} aria-label={link.label} class="w-8 h-8">
                    <svg width="100%" height="100%" version="2.0">
                      <use href={`#${link.svgSymbolId}`} />
                    </svg>
                  </a>
                ))
              }
            </div>
          </div>
          <div class="p-4 md:p-8 flex overflow-x-auto">
            {
              site.works.map((work, i) => (
                <div>
                  <div class="flex items-center">
                    <div class="w-20 h-20 md:w-24 md:h-24 overflow-hidden rounded-full border-2 border-color4 dark:border-dcolor4 bg-white">
                      <img
                        src={work.imageSrc}
                        alt={work.companyName}
                        width="100%"
                        height="100%"
                        class="object-cover object-center"
                      />
                    </div>
                    {i < site.works.length - 1 && (
                      <div class="w-20 md:w-24 border-t-2 border-color4 dark:border-dcolor4 shadow-md" />
                    )}
                  </div>
                  <div class="mt-2 w-32 md:w-44">
                    <div class="text-xs text-gray-600 dark:text-gray-300">
                      {work.from} -
                    </div>
                    <div class="text-xs text-gray-600 dark:text-gray-300">
                      {work.to}
                    </div>
                    <div class="text-sm md:text-base tracking-wider truncate text-color4 dark:text-dcolor4 font-bold">
                      {work.companyName}
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
          <div class="p-4 md:p-8 overflow-x-auto space-x-8 whitespace-nowrap">
            {
              site.projects.map(project => (
                <div class="inline-block w-72 md:w-80">
                  <div
                    class="w-full overflow-hidden rounded-xl shadow border border-color1 dark:border-dcolor1"
                    style="aspect-ratio: 4/3"
                  >
                    <img
                      src={project.imageSrc}
                      alt={project.name}
                      width="100%"
                      height="100%"
                      class="object-cover object-center"
                    />
                  </div>
                  <div class="mt-4 tracking-widest text-lg md:text-xl text-color4 dark:text-dcolor4">
                    {project.name}
                  </div>
                  <div class="mt-1 flex flex-wrap">
                    {project.tags.map(tag => (
                      <div class="text-xs mr-1 mt-1 bg-color2 dark:bg-dcolor2 text-gray-900 dark:text-gray-50 px-2 py-1 rounded">
                        {tag}
                      </div>
                    ))}
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <script type="module" hoist>
      import "../main";
    </script>
  </body>
</html>
