    <div class="fixed w-full z-20 top-20">
      <div
        class="w-full max-w-screen-md mx-auto px-4 py-2 flex flex-col items-end"
      >
        <div
          class="border-2 bg-white border-black rounded-xl overflow-hidden w-64"
        >
          <a
            href="#about"
            class="block text-center text-sm border-b border-black p-3 bg-white text-black"
            >About me</a
          >
          <a
            href="#work"
            class="block text-center text-sm border-t border-b border-black p-3 bg-indigo-400 text-white font-bold"
            >My work experiences</a
          >
          <a
            href="#project"
            class="block text-center text-sm border-t border-black p-3 bg-white text-black"
            >My personal projects</a
          >
        </div>

        <div class="w-64 text-sm mt-6 px-2">
          <div class="flex">
            <div class="flex-auto">Current site version:</div>
            <div class="font-bold">v4</div>
          </div>
          <div class="flex mt-2">
            <div class="flex-auto">Older version:</div>
            <div class="flex-none flex items-center space-x-2">
              <div>v3</div>
              <div class="w-1 h-1 bg-black rounded-full"></div>
              <div>v2</div>
              <div class="w-1 h-1 bg-black rounded-full"></div>
              <div>v1</div>
            </div>
          </div>
        </div>
      </div>
    </div>

