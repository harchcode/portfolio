---
import "../style.css";
import picUrl from "../assets/login.svg";
import { site } from "../site-info";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="My portfolio site" />
    <title>{site.title}</title>
  </head>
  <body>
    {
      site.svgDefs.map(svgDef => (
        <svg style="display: none" version="2.0">
          <defs>
            <symbol id={svgDef.id} viewBox={svgDef.viewBox}>
              <path fill="#000" d={svgDef.path} />
            </symbol>
          </defs>
          <use href={`#${svgDef.id}`} />
        </svg>
      ))
    }

    <div class="flex items-center justify-center w-full h-full">
      <div class="w-full max-w-7xl relative">
        <div
          class="absolute top-0 right-0 overflow-visible"
          style="width: 40rem; height: 40rem"
        >
          <img
            src={picUrl}
            width="100%"
            height="100%"
            alt=""
            class="object-cover object-center"
            style="transform: scale(-1.2,1.2);"
          />
        </div>

        <div class="relative">
          <div class="p-8">
            <div class="text-7xl tracking-widest font-extralight">
              Hartono Chandra
            </div>
            <div class="text-xl tracking-widest font-bold mt-4 text-gray-700">
              Software Engineer - Web
            </div>
            <div class="mt-8 flex space-x-8">
              {
                site.socialLinks.map(link => (
                  <a href={link.url} aria-label={link.label} class="w-8 h-8">
                    <svg width="100%" height="100%" version="2.0">
                      <use href={`#${link.svgSymbolId}`} />
                    </svg>
                  </a>
                ))
              }
            </div>
          </div>
          <div class="p-8 flex overflow-x-auto">
            {
              site.works.map((work, i) => (
                <div>
                  <div class="flex items-center">
                    <div class="w-24 h-24 overflow-hidden rounded-full border border-gray-500 shadow-md">
                      <img
                        src={work.imageSrc}
                        alt={work.companyName}
                        width="100%"
                        height="100%"
                        class="object-cover object-center"
                      />
                    </div>
                    {i < site.works.length - 1 && (
                      <div class="w-24 border-t border-gray-500 shadow-md" />
                    )}
                  </div>
                  <div class="mt-2 w-44">
                    <div class="font-bold text-xs text-gray-500">
                      {work.from} -
                    </div>
                    <div class="font-bold text-xs text-gray-500">{work.to}</div>
                    <div class="tracking-widest">{work.companyName}</div>
                  </div>
                </div>
              ))
            }
          </div>
          <div class="p-8 overflow-x-auto space-x-8 whitespace-nowrap">
            {
              site.projects.map(project => (
                <div class="inline-block w-80">
                  <div class="w-full h-64 overflow-hidden rounded-xl shadow-md">
                    <img
                      src={project.imageSrc}
                      alt={project.name}
                      width="100%"
                      height="100%"
                      class="object-cover object-center"
                    />
                  </div>
                  <div class="mt-4 tracking-widest text-xl">{project.name}</div>
                  <div class="mt-1 flex flex-wrap">
                    {project.tags.map(tag => (
                      <div class="text-xs mr-1 mt-1 bg-gray-200 text-gray-800 px-1 py-0.5 rounded">
                        {tag}
                      </div>
                    ))}
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <script type="module" hoist>
      import "../main";
    </script>
  </body>
</html>
