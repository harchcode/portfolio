---
import "../style.css";
import site from "../site-info";
import { Image } from "astro:assets";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={site.description} />
    <title>{site.title}</title>

    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>

  <body>
    <div
      class="content max-w-sm md:max-w-screen-md mx-auto flex flex-col md:flex-row-reverse"
    >
      <div class="relative flex-auto flex justify-center md:justify-end">
        <div
          class="fixed z-20 w-full md:w-72 px-4 py-2 md:top-8 backdrop-blur-sm md:backdrop-blur-0 shadow md:shadow-none"
        >
          <div
            class="w-full max-w-sm mx-auto flex md:flex-col border-2 bg-white dark:bg-black border-stone-600 dark:border-stone-100 rounded-full md:rounded-xl overflow-hidden"
          >
            <a href="#about" class="menulink border-r md:border-r-0 md:border-b"
              >About</a
            >
            <a
              href="#work"
              class="menulink border-l border-r md:border-l-0 md:border-r-0 md:border-t md:border-b"
              >Works</a
            >
            <a
              href="#project"
              class="menulink border-l md:border-l-0 md:border-t">Projects</a
            >
          </div>
        </div>

        <div
          class="absolute right-0 md:right-auto md:fixed z-10 md:top-40 px-4 py-2 mt-14 md:mt-8"
        >
          <div class="flex flex-col-reverse items-end justify-between text-sm">
            <div
              class="flex flex-col mt-4 md:mt-6 shadow rounded-xl overflow-hidden"
            >
              <button
                id="light-mode-button"
                class="w-10 h-10 md:w-12 md:h-12 p-2"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="ionicon"
                  viewBox="0 0 512 512"
                  ><title>Sunny</title><path
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-miterlimit="10"
                    stroke-width="32"
                    d="M256 48v48M256 416v48M403.08 108.92l-33.94 33.94M142.86 369.14l-33.94 33.94M464 256h-48M96 256H48M403.08 403.08l-33.94-33.94M142.86 142.86l-33.94-33.94"
                  ></path><circle
                    cx="256"
                    cy="256"
                    r="80"
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-miterlimit="10"
                    stroke-width="32"></circle>
                </svg>
              </button>
              <button
                id="system-mode-button"
                class="w-10 h-10 md:w-12 md:h-12 p-2"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                  <title>Contrast</title>
                  <circle
                    cx="256"
                    cy="256"
                    r="208"
                    fill="none"
                    stroke="currentColor"
                    stroke-linejoin="round"
                    stroke-width="32"
                  >
                  </circle>
                  <path
                    fill="currentColor"
                    d="M256 464c-114.88 0-208-93.12-208-208S141.12 48 256 48z"
                  >
                  </path>
                </svg>
              </button>
              <button
                id="dark-mode-button"
                class="w-10 h-10 md:w-12 md:h-12 p-2"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="ionicon"
                  viewBox="0 0 512 512"
                  ><title>Moon</title><path
                    d="M160 136c0-30.62 4.51-61.61 16-88C99.57 81.27 48 159.32 48 248c0 119.29 96.71 216 216 216 88.68 0 166.73-51.57 200-128-26.39 11.49-57.38 16-88 16-119.29 0-216-96.71-216-216z"
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="32"></path>
                </svg>
              </button>
            </div>
            <div class="flex-none flex items-center space-x-2">
              <span class="font-extrabold">v4</span>
              <div class="w-1 h-1 bg-black rounded-full"></div>
              <a href="https://v3--hartonochandra.netlify.app" class="">v3</a>
              <div class="w-1 h-1 bg-black rounded-full"></div>
              <a href="https://v2--hartonochandra.netlify.app" class="">v2</a>
              <div class="w-1 h-1 bg-black rounded-full"></div>
              <a href="https://v1--hartonochandra.netlify.app" class="">v1</a>
            </div>
          </div>
        </div>
      </div>
      <div class="max-w-sm">
        <div id="about" class="px-4 py-2 w-full pt-16">
          <div class="w-32 h-32 ml-4 mt-4 md:mt-0">
            <Image
              src={site.about.imageSrc}
              alt="profile"
              style="filter: drop-shadow(0 0 4px #fff)"
              loading="eager"
            />
          </div>
          <div class="font-bold mt-8">About me</div>
          <div class="text-3xl mt-4 tracking-wider">{site.about.name}</div>
          <div
            class="text-lg mt-2 font-mono tracking-tighter font-bold text-yellow-700 dark:text-yellow-300"
          >
            {site.about.jobTitle}
          </div>
          <div class="mt-4" set:html={site.about.intro} />

          <div class="mt-4 text-gray-500 dark:text-gray-300 space-y-2">
            {
              site.socialLinks.map(link => (
                <div class="flex">
                  <div class="flex-none w-20 font-bold">{link.label}</div>
                  <a class="overflow-hidden overflow-ellipsis" href={link.url}>
                    {link.linkText ?? link.url}
                  </a>
                </div>
              ))
            }
          </div>

          <div class="mt-6">
            <a class="resumelink" href={site.about.resumeUrl}
              >Download my resume</a
            >
          </div>
        </div>

        <div id="work" class="w-full px-4 py-2 pt-16">
          <div class="font-bold">My work experiences</div>
          <div class="mt-8 relative">
            {
              site.works.map((work, i) => (
                <div class="relative">
                  {i !== site.works.length - 1 && (
                    <div class="absolute w-4 h-full flex justify-center">
                      <div
                        class={`bg-gradient-to-b ${work.gradientClass} w-0.5 h-full`}
                      />
                    </div>
                  )}

                  <div
                    class={`relative h-full${
                      i !== site.works.length - 1 ? " pb-12" : ""
                    }`}
                  >
                    <div class={`flex items-center w-full`}>
                      <div
                        class={`w-4 h-4 p-[2px] rounded-full bg-white ${work.borderClass} border-2 flex-none overflow-hidden`}
                      >
                        <div
                          class={`${work.bgClass} w-full h-full rounded-full`}
                        />
                      </div>

                      <div class="ml-4 -mt-[1px] text-xs font-bold flex-auto">
                        {work.periode}
                      </div>
                    </div>

                    <div class="flex w-full">
                      <div class="flex-none w-4" />

                      <div class="ml-4 flex-auto">
                        <div class="flex mt-4">
                          <div class="w-6 h-6 rounded overflow-hidden bg-white border border-black">
                            <Image
                              src={work.imageSrc}
                              alt={`Logo of ${work.companyName}`}
                              loading="eager"
                            />
                          </div>
                          <div class="ml-2 text-xl">{work.companyName}</div>
                        </div>
                        <div class="text-sm font-mono tracking-normal mt-1">
                          {work.jobTitle}
                        </div>

                        <ul class="list-check mt-4 text-xs font-bold text-zinc-700 dark:text-zinc-300 grid grid-cols-1 gap-2">
                          {work.tags.map(check => (
                            <li>{check}</li>
                          ))}
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <div id="project" class="w-full px-4 py-2 pt-16">
          <div class="font-bold">My personal projects</div>

          <div class="mt-8 space-y-12">
            {
              site.projects.map(project => (
                <div class={`flex flex-col`}>
                  <div class={`flex-none flex overflow-hidden`}>
                    <div class="flex-none w-16 h-16 bg-black rounded-md overflow-hidden">
                      <Image
                        src={project.imageSrc}
                        alt={`Screenshot of ${project.name}`}
                      />
                    </div>
                    <div class="flex-auto flex flex-col px-4 py-2">
                      <div class="text-xl -mt-2">{project.name}</div>
                      <div class="flex flex-wrap">
                        {project.tags.map(tag => (
                          <div class="text-xs mr-1 mt-1 bg-stone-200 dark:bg-stone-700 px-2 py-1 rounded">
                            {tag}
                          </div>
                        ))}
                      </div>
                    </div>
                  </div>
                  <div class="mt-2 flex-auto items-end flex w-full">
                    <ul class="flex space-x-2 w-full">
                      {project.links.map(link => (
                        <li class="flex-1">
                          <a href={link.url} class="projectlink">
                            {link.text}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <div
          id="footer"
          class="w-full mt-8 pb-4 px-4 py-2 text-xs text-stone-700 dark:text-stone-400"
        >
          <div>
            This site is built with <a href="https://astro.build/">Astro</a> and


            <a href="https://tailwindcss.com/">TailwindCSS</a>.
          </div>
          <div>
            See the source code on the <a
              href="https://github.com/harchcode/portfolio">GitHub repo</a
            >.
          </div>
        </div>
      </div>
    </div>

    <script src="../main.ts"></script>
  </body>
</html>
